<h1>Books</h1>
<%= link_to "New Book", new_book_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Published On</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.published_on %></td>
      <td>
        <%= link_to "Show", book_path(book) %> |
        <%= link_to "Edit", edit_book_path(book) %> |
        <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
</table>
